        else {
          if (GetBoolean(Beast, "awake")) {
            msg ("You turn to face the beast, but before you can scratch him, the terrible breath of the beast knocks you out.")
          }
          else {
            if (GetInt(Ford the cat, "sharpenClaws") = 0) {
              msg ("you scratch the beast with your pathetic dull claws and it doesn't even make a sound.")
            }
            else if (GetInt(Ford the cat, "sharpenClaws") = 1) {
              msg ("You scratch the beast with your somewhat sharp claws and you think you hear it wimper!")
            }
            else {
              msg ("You scratch at the beast with your super sharp claws and it groans deeply before rising to its feet with a loud roar.  Maybe trying to wake it up wasn't such a good idea.<br/>")
