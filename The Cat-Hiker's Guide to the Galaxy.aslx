  <function name="DogisHungry">
    if (GetBoolean(Dog, "hungry")) {
      msg ("Dog says \"I'm not going to just give you that device without you giving me something in return. Go find me that cheese sandwich.\"")
    }
    else {
      msg ("Dog says \"Thanks again for the food. Now you better figure out that device. I sense something coming.\"")
    }
  </function>
  <function name="MeetingDog">
    if (not Got(Device)) {
      if (GetBoolean(Dog, "isClawed")) {
        msg ("Dog promptly sits on the object and says \"You want it? You can't have it. Unless, that is, you give me something in return. You know that pub over there. They make the most fantastic cheese sandwiches. Get me one, and I'll give you the device no problem. You might have to go around the northern end of the pub to get in though.\"")
      }
      else {
        msg ("Dog mumbles something. You can't understand anything he says while he has the gleaming object in his mouth")
      }
    }
    else {
      msg ("Dog says \"Thanks again for the food. Whoa look up there!\"")
    }
  </function>
